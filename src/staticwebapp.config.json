{
  "routes": [
    {
      "route": "/login",
      "redirect": "/.auth/login/aad?post_login_redirect_uri=index.html"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout"
    },
    {
      "route": "/.auth/login/aad/callback",
      "redirect": "/"
    },
    {
      "route": "/index.html",
      "allowedRoles": ["administrator"]
    },
    {
      "route": "/hosts_jotform.html",
      "allowedRoles": ["administrator"]
    },
    {
      "route": "/acl_jotform.html",
      "allowedRoles": ["administrator"]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/login.html",
      "statusCode": 302
    }
  },
  "networking": {
    "allowedIpRanges": [
      "175.177.42.20/32",
      "125.192.214.184/32",
      "167.220.235.0/24"
    ]
  }
}
